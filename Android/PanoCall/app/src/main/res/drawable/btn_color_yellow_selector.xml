<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#D4B106" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/btn_color_checked" />
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="center">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#D4B106" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:gravity="center">
                <shape>
                    <corners android:radius="2dp" />
                    <solid android:color="#D4B106" />
                    <size
                        android:width="20dp"
                        android:height="20dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>