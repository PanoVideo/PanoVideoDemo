<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_wb_graphics_popup_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_view_wb_graphics_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingTop="10dp"
    android:visibility="gone"
    tools:visibility="visible">

    <RadioGroup android:id="@+id/radio_graphics_tools_group"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_graphics_line"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/btn_wb_graphics_popup_line_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_hollow_circle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/btn_wb_graphics_popup_hollow_circle_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_hollow_square"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/btn_wb_graphics_popup_hollow_square_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_solid_circle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/btn_wb_graphics_popup_solid_circle_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_solid_square"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/btn_wb_graphics_popup_solid_square_selector"
            android:button="@null"
            android:gravity="center"
            />

    </RadioGroup>

    <View
        android:id="@+id/view_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/control_popup_view_divider_bg_color"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_graphics_tools_group" />

    <RadioGroup android:id="@+id/radio_graphics_color_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_divider"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/rb_graphics_color_black"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_color_black_selector"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            tools:checked="false"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_red"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_red_selector"
            android:button="@null"
            android:gravity="center"
            tools:checked="true"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_orange"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_orange_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_yellow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_yellow_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_green"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_green_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_turquoise"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_turquoise_selector"
            android:button="@null"
            android:gravity="center"
            android:tag="#7CB305"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_azure"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_blue_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_blue"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_navy_selector"
            android:button="@null"
            android:gravity="center"
            />

        <RadioButton
            android:id="@+id/rb_graphics_color_purple"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btn_color_purple_selector"
            android:button="@null"
            android:gravity="center"
            />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>