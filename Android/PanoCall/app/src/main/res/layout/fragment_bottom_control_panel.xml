<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#333333"
    android:layout_gravity="center"
    android:id="@+id/cl_bottom_control_panel"
    tools:ignore="ContentDescription"
    tools:context=".BottomControlPanelFragment">

    <Button
        android:id="@+id/btn_call_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_call_audio_normal"
        android:drawableTop="@drawable/btn_call_audio_normal"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:text="@string/title_call_audio_normal"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_small_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_call_video"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_call_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_call_video_normal"
        android:drawableTop="@drawable/btn_call_video_normal"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:text="@string/title_call_video_normal"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_small_text_size"
        app:layout_constraintStart_toEndOf="@+id/btn_call_audio"
        app:layout_constraintEnd_toStartOf="@+id/btn_call_whiteboard"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_call_whiteboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_call_wb_closed"
        android:drawableTop="@drawable/btn_call_wb_closed"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:text="@string/title_call_wb_closed"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_small_text_size"
        app:layout_constraintStart_toEndOf="@+id/btn_call_video"
        app:layout_constraintEnd_toStartOf="@+id/btn_call_settings"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_call_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="?android:selectableItemBackground"
        android:contentDescription="@string/title_call_settings"
        android:drawableTop="@drawable/btn_call_settings"
        android:drawablePadding="5dp"
        android:paddingTop="10dp"
        android:text="@string/title_call_settings"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/button_small_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_call_whiteboard"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>